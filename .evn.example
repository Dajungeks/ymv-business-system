# YMV Business System v4.0 Environment Variables
# 환경 변수 설정 예시 파일
# 실제 사용 시 .env 파일로 복사하여 사용하세요

# ================================
# Supabase 데이터베이스 설정
# ================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ================================
# 애플리케이션 설정
# ================================
APP_VERSION=4.0.0
APP_ENV=development  # development, staging, production
DEBUG_MODE=True

# ================================
# v4.0 새로운 기능 설정
# ================================
# 다국어 지원
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,vn
GOOGLE_TRANSLATE_API_KEY=your-google-translate-api-key  # 선택사항

# 코드 관리 시스템
CODE_LENGTH_LIMIT=7  # 최대 코드 단계 수
CODE_SEPARATOR=-     # 코드 구분자

# ================================
# 보안 설정
# ================================
SECRET_KEY=your-secret-key-for-jwt-tokens
SESSION_TIMEOUT=3600  # 세션 타임아웃 (초)
MAX_LOGIN_ATTEMPTS=5  # 최대 로그인 시도 횟수

# ================================
# 파일 업로드 설정
# ================================
MAX_FILE_SIZE=10MB
ALLOWED_FILE_TYPES=csv,xlsx,xls
UPLOAD_FOLDER=uploads/

# ================================
# 이메일 설정 (v5.0 준비용)
# ================================
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# EMAIL_FROM=noreply@ymv.com

# ================================
# 외부 API 설정 (v5.0 준비용)
# ================================
# EXCHANGE_RATE_API_KEY=your-exchange-rate-api-key
# EXCHANGE_RATE_UPDATE_INTERVAL=3600  # 환율 업데이트 주기 (초)

# ================================
# 로깅 설정
# ================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# ================================
# 캐시 설정
# ================================
CACHE_TTL=300  # 캐시 생존시간 (초)
ENABLE_CACHE=True

# ================================
# 개발 도구 설정
# ================================
ENABLE_PROFILER=False  # 성능 프로파일러 활성화
SHOW_DEBUG_INFO=False  # 디버그 정보 표시

# ================================
# Streamlit Cloud 배포 설정
# (secrets.toml에서 관리됨)
# ================================
# 이 설정들은 Streamlit Cloud의 secrets에서 관리됩니다:
# - SUPABASE_URL
# - SUPABASE_ANON_KEY
# - SECRET_KEY
# 
# 로컬 개발 환경에서는 .streamlit/secrets.toml 파일을 생성하여 
# 해당 설정들을 관리하세요.

# ================================
# 사용 예시
# ================================
# 1. 이 파일을 .env로 복사
# 2. 실제 값들로 수정
# 3. .gitignore에 .env 파일 추가 (보안)
# 4. python-dotenv로 로드하여 사용

# 주의: 실제 API 키나 비밀번호는 절대 공개 저장소에 업로드하지 마세요!